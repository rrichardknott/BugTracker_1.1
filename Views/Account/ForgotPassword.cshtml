@model BugTracker_1._1.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Images/favicon.png" type="image/png" rel="icon" />
    <title>Richlynn Bug Tracker</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/all.css" rel="stylesheet" type="text/css"><!--fontawesome-->
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <script src="//unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- Custom styles for this template-->
    @*<link href="~/Content/sb-admin-2.css" rel="stylesheet">*@
</head>
<body class="bg-gradient-primary backgroundDarkBlue">

    <div class="container" id="forgotPasswordLoginBackground">

        <!-- Outer Row -->
        <div class="row justify-content-center" id="forgotPasswordLoginBox">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row" id="forgotPasswordRow">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5" id="forgotPasswordRightColumn">
                                    <div class="text-center">

                                        <h1 class="h4 colorBlack mb-4">Welcome To The<br /> Richlynn Bug Tracker!</h1>
                                    </div>

                                    <h2>@ViewBag.Title</h2>


                                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <h4 class="colorBrightRed font-weight-bolder">Enter your email.</h4>
                                        <hr />
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        <div class="form-group">                          
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Email", @maxlength = "50", @id ="forgotPasswordTextBox" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-block btn-user backgroundDarkBlue text-white" id="forgotPasswordButton" value="Email Link">Send Email Link &nbsp;<i class="fas fa-key colorWhite"></i></button>
                                                
                                            </div>
                                        </div>
                                    }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery.js"></script>
    @*<script src="~/Scripts/bootstrap.bundle.min.js"></script>*@

    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    <!-- Custom scripts for all pages-->
    @*<script src="~/Scripts/sb-admin-2.js"></script>*@

</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
